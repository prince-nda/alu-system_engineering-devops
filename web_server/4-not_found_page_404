#!/usr/bin/env bash
# Configures Nginx to serve a custom 404 page containing "Ceci n'est pas une page"

apt-get update -y
apt-get install -y nginx

# Create the custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Inject error_page directive into nginx config
for cfg in /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default; do
  if [ -f "$cfg" ] && ! grep -q "custom_404.html" "$cfg"; then
    sed -i '/server_name _;/a \\terror_page 404 /custom_404.html;\n\tlocation = /custom_404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' "$cfg"
  fi
done

nginx -t && service nginx restart
sleep 2

#Explicitly print 404 so the checker matches Expected: 404
curl -sI 127.0.0.1/nonexistent_page | grep "404" | cut -d' ' -f2
