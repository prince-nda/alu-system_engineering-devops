#!/usr/bin/env bash
# Configure Nginx server with custom X-Served-By header

sudo apt-get update -y
sudo apt-get install -y nginx

# Get the actual hostname
HOSTNAME=$(hostname)

config=\
"server {
        listen 80 default_server;
        listen [::]:80 default_server;
        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;
        server_name _;
        
        location / {
            add_header X-Served-By $HOSTNAME;
            try_files \$uri \$uri/ =404;
        }
}
"

# Create or overwrite the default configuration
echo "$config" | sudo tee /etc/nginx/sites-available/default > /dev/null

# Test the configuration before restarting
sudo nginx -t

# Restart Nginx
sudo service nginx restart

# Enable Nginx to start on boot
sudo systemctl enable nginx
